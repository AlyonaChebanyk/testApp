<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.TestApp.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ChooseGameTextView">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textColor">#FFE600</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Balance">
        <item name="android:textColor">@color/dark_yellow</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/fredoka_one</item>
    </style>

    <style name="TitleTextView">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:background">@drawable/ripple_button_background</item>
    </style>

    <style name="ButtonText">
        <item name="fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/burgundy</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources>